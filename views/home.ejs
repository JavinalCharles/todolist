<main>
	<header id="header_section">
		<h1>My To-Do-List</h1>
	</header>
	<section id="add_section">
		<form class="form grid-box" id="add_task_form" action="javascript:submitAddTask();">
			<div class="form-input-box gi-xxs-12 gi-md-8">
				<input id="task-field-input" class="form-input" type="text" name="task" placeholder="Task" maxlength="256" pattern="[\w\s]{1, 256}" required>
				<label class="form-input-label" for="task">Task</label>
			</div>
			<div class="form-input-box gi-xxs-12 gi-md-4">
				<select id="priority-selection" class="form-select" name="priority" required>
					<option></option>
					<% for (let i = 0; i < priorities.length; ++i) { %>
						<option value="<%= priorities[i].id %>"><%= priorities[i].text; %></option>
					<% } %>
				</select>
				<label class="form-input-label" for="priority">Priority Level</label>
			</div>
			<div class="form-input-box gi-xxs-12 gi-md-12 flex-box flex-xss-jc">
				<button id="add-task-btn" type="submit" class="btn submit-btn">Add Task</button>
			</div>
		</form>
	</section>
	<section id="main_section">
		<% for(let i = 0; i < todoData.length; ++i) { %>
		<div class="grid-box todo-item-container">
			<div class="grid-item gi-xxs-2 gi-xs-6 gi-sm-6">
				<p class="task-id-p">#<%= todoData[i].todoID; %></p>
			</div>
			<div class="grid-item gi-xxs-10 gi-xs-6 gi-sm-6 priority-div">
				<p class="priority-p">priority level: <%= todoData[i].text; %></p>
			</div>
			<div class="grid-item gi-xxs-12 gi-xs-12 gi-sm-6">
				<p class="tasks-p"><%= todoData[i].tasks; %></p>
			</div>
			<div class="grid-item gi-xxs-12 gi-xs-12 gi-sm-6 action-div">
				<div class="flex-buttons flex-box flex-xss-jc flex-sm-je">
					<% if (todoData[i].priorityID != 1) { %>
					<button class="btn done-btn" type="button" value="<%= todoData[i].todoID; %>">Mark Done</button>
					<% } %>
					<button class="btn del-btn" type="button" value="<%= todoData[i].todoID; %>">Delete Task</button>
				</div>
			</div>
		</div>
		<% } %>
	</section>
</main>